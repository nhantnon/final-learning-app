<p><%= link_to "BACK TO MAP SEARCH", :root%></p>

<div class="container userInfo">
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
               <div class="panel-heading resume-heading">
                  <div class="row">
                     <div class="col-lg-12">
                        <div class="col-xs-12 col-sm-4">
                           <figure>
                              <img class="img-circle img-responsive" alt="" src="http://placehold.it/300x300">
                           </figure>
                           <div class="row">
                                <a href="#" class="btn btn-green btn-block btn-compose-email">Send a Message</a>

                           </div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                           <ul class="list-group">
                              <li class="list-group-item"><h2><%=@user.first_name + " " + @user.last_name%></h2></li>
                              <li class="list-group-item"><i class="fa fa-map-marker"></i>  <%=@user.location%></li>
                              <li class="list-group-item"><i class="fa fa-envelope"></i> <%=@user.email%></li>
                           </ul>
                        </div>
                     </div>
                  </div>
               </div>

               <div class="bs-callout bs-callout-green">
                  <h4>Summary</h4>
                  <p>
                     Hi there.
                  </p>
               </div>

               <div class="bs-callout bs-callout-green">
                  <h4>Interests</h4>
                  <p>
                     Machine Learning, Statistical Learning Theory, and Reinforcement Learning
                  </p>
               </div>
               
               <div class="bs-callout bs-callout-green">
                  <h4>Skills</h4>
                  <ul class="list-group">
                      <%if @user.skills.length > 0 %>
                        <%@user.skills.each do |skill|%>
                          <li class="list-group-item"> 
                            <%=skill.name%>
                          </li>  
                        <%end%>
                      <%else%>
                        <li class="list-group-item"> This user has not listed any skills</li>
                      <%end%>
                  </ul>
               </div>

            </div>
         </div>
    </div>
</div>
</div>

<div id="edit-note">
    You are now viewing <strong>edit</strong> mode
</div>
<div class="container userInfo">
<div class="row">
<%= bootstrap_form_for(@user, url: user_update_path, html: {:multipart => true}) do |f| %>
    <div class="col-sm-12">
        <div class="panel panel-default">
               <div class="panel-heading resume-heading">
                  <div class="row">
                     <div class="col-lg-12">
                        <div class="col-xs-12 col-sm-4">
                           <figure class="text-center">
                              <%= image_tag(@user.image.url(:medium), :class => "img-thumbnail img-responsive center-block") %>
                              <%= f.file_field :image, label: "Update your profile image", help: "Image must be less than 2 megabytes" %>
                           </figure>
                           <div class="row">

                           </div>
                        </div>
                        <div class="col-xs-12 col-sm-8">
                           <ul class="list-group">
                              <li class="list-group-item form-inline">
                                <h2>
                                <%= f.text_field :first_name, autofocus: true, hide_label: true, placeholder: "First name" %>
                                <%= f.text_field :last_name, autofocus: true, hide_label: true, placeholder: "Last name"  %>
                                </h2>
                              </li>
                              <li class="list-group-item form-inline"><i class="fa fa-map-marker"></i>
                                <%= f.text_field :location, autofocus: true, hide_label: true, placeholder: "Zip code" %>
                              </li>
                              <li class="list-group-item form-inline"><i class="fa fa-envelope"></i> 
                                <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email address" %>
                              </li>
                           </ul>
                           <%= f.submit "Update", :class => "btn btn-success form-inline" %>
                           <%= link_to 'Cancel', user_show_path, class: "btn btn-default"%>
                        </div>
                     </div>
                  </div>
               </div>

               <div class="bs-callout bs-callout-green">
                  <h4>Summary</h4>
                  <ul class="list-group">
                        <p>
                          <%= f.text_area :summary, autofocus: true, hide_label: true, placeholder: "Add a summary about yourself" %>
                        </p>
                  </ul>
               </div>

               <div class="bs-callout bs-callout-green">
                  <h4>Interests</h4>
                  <ul class="list-group">
                        <p>
                          <%= f.text_area :interests, autofocus: true, hide_label: true, placeholder: "Add your interests" %>
                        </p>
                  </ul>
               </div>

               <div class="bs-callout bs-callout-green">
                  <h4>Skills</h4>
                  <ul class="list-group">
                    <div>
                      <% Skill.all.each do |skill| %>
                      <label>
                          <%= check_box_tag "user[skill_ids][]", skill.id, f.object.skills.include?(skill) %>
                          <%= skill.name %>
                      <% end %>
                    </div>
                  </ul>
               </div>

            </div>
         </div>
    </div>
<% end %>
</div>
</div>